# ========================================
# CONFIGURAÇÕES DO AZURE AD (para autenticação)
# ========================================

# ID do cliente Azure AD (encontrado no portal do Azure)
AZURE_AD_CLIENT_ID=your_azure_ad_client_id_here

# Segredo do cliente Azure AD (gerado no portal do Azure)
AZURE_AD_CLIENT_SECRET=your_azure_ad_client_secret_here

# ID do tenant Azure AD (encontrado no portal do Azure)
AZURE_AD_TENANT_ID=your_azure_ad_tenant_id_here

# ========================================
# CONFIGURAÇÕES DO AZURE DEVOPS (para buscar tasks)
# ========================================

# Nome da organização no Azure DevOps
AZURE_DEVOPS_ORG=your_organization_name

# Nome do projeto no Azure DevOps
AZURE_DEVOPS_PROJECT=your_project_name

# Token de acesso pessoal do Azure DevOps
AZURE_DEVOPS_TOKEN=your_personal_access_token

# ========================================
# CONFIGURAÇÕES DO NEXTAUTH
# ========================================

# URL base da aplicação (para desenvolvimento local)
NEXTAUTH_URL=http://localhost:3000

# Chave secreta para NextAuth (gere uma string aleatória)
NEXTAUTH_SECRET=your_nextauth_secret_here

# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================

# URL de conexão com PostgreSQL (baseada no docker-compose.yml)
DATABASE_URL=postgresql://postgres:easypace@localhost:5432/easypace

# Configurações individuais do PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=easypace
DB_NAME=easypace 